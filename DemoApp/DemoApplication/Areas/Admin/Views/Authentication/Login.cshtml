@using DemoApplication.Areas.Admin.ViewModels.Authentication
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Pustok admin dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/admin/assets/images/favicon.ico">

    <!-- App css -->
    <link asp-append-version="true" href="~/admin/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link asp-append-version="true" href="~/admin/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link asp-append-version="true" href="~/admin/assets/css/app.min.css" rel="stylesheet" type="text/css" />
</head>

<body id="body" class="auth-page" style="background-image: url('/admin/assets/images/p-1.png'); background-size: cover; background-position: center center;">
    <!-- Log In page -->
    <div class="container-md">
        <div class="row vh-100 d-flex justify-content-center">
            <div class="col-12 align-self-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-4 mx-auto">
                            <div class="card">
                                <div class="card-body p-0 auth-header-box">
                                    <div class="text-center p-3">
                                        <a href="index.html" class="logo logo-admin">
                                            <img asp-append-version="true" src="~/admin/assets/images/logo-sm.png" height="50" alt="logo" class="auth-logo">
                                        </a>
                                        <h4 class="mt-3 mb-1 fw-semibold text-white font-18">Pustok</h4>
                                        <p class="text-muted  mb-0">Sign in to continue to as admin.</p>
                                    </div>
                                </div>
                                <div class="card-body pt-0">
                                    <form asp-route="admin-auth-login" method="POST" class="my-4">
                                        <div class="form-group mb-2">
                                            <label asp-for="Email" class="form-label"></label>
                                            <input asp-for="Email" class="form-control" placeholder="Enter email">
                                        </div><!--end form-group-->

                                        <div class="form-group">
                                            <label asp-for="Password" class="form-label"></label>
                                            <input asp-for="Password" class="form-control" placeholder="Enter password">
                                        </div><!--end form-group-->

                                        <div class="form-group mb-0 row">
                                            <div class="col-12">
                                                <div class="d-grid mt-3">
                                                    <button class="btn btn-primary" type="submit">Log In <i class="fas fa-sign-in-alt ms-1"></i></button>
                                                </div>
                                            </div><!--end col-->
                                        </div> <!--end form-group-->
                                    </form><!--end form-->
                                </div><!--end card-body-->
                            </div><!--end card-->
                        </div><!--end col-->
                    </div><!--end row-->
                </div><!--end card-body-->
            </div><!--end col-->
        </div><!--end row-->
    </div><!--end container-->
    <!-- App js -->
    <script asp-append-version="true" src="~/admin/assets/js/app.js"></script>

</body>

</html>